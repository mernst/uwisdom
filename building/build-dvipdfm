# 0.13.2c is latest as of 11/13/2003

cd ~/tmp
wget http://gaspra.kettering.edu/dvipdfm/dvipdfm-0.13.2c.tar.gz
tar zxf dvipdfm-0.13.2c.tar.gz
cd dvipdfm
./configure
make
sudo make install
setenv DEF `locate -n 1 /dvipdfm.def`
echo $DEF
sudo mv $DEF $DEF.orig
sudo cp -pf latex-support/dvipdfm.def $DEF
sudo mktexlsr

