JDK 1.4.2 for Linux (from java.sun.com):

http://java.sun.com/j2se/downloads.html

j2sdk-1_4_2_08-linux-i586.bin

# setenv JDKPARENTDIR /usr/local/pkg/java
# For pag:
setenv JDKPARENTDIR /usr/local/pkg/java/java-1.4.2
# After "1.4.2" or "1_4_2":
setenv JDKSUFFIX _08

# Run all this on pag

sudo mkdir -p $JDKPARENTDIR
sudo mv ~/tmp/j2sdk-1_4_2${JDKSUFFIX}-linux-i586.bin $JDKPARENTDIR
cd $JDKPARENTDIR
chmod +x j2sdk-1_4_2${JDKSUFFIX}-linux-i586.bin
sudo ./j2sdk-1_4_2${JDKSUFFIX}-linux-i586.bin

# pag-specific setup:
cd /g2
sudo rm -f jdk1.4.2
sudo ln -s $JDKPARENTDIR/j2sdk1.4.2 jdk1.4.2
sudo rm -f jdk1.4
sudo ln -s jdk1.4.2 jdk1.4
sudo rm -f jdk
sudo ln -s jdk1.4 jdk

# My personal setup:

mkdir -p ~/java
cd ~/java
ln -s $JDKPARENTDIR/j2sdk1.4.2${JDKSUFFIX} jdk1.4.2
rm -f jdk1.4
ln -s jdk1.4.2 jdk1.4
rm -f jdk
ln -s jdk1.4 jdk

----------------

Docs:

# First, download from same URL as above (third section from the bottom)

sudo mv j2sdk-1_4_2-doc.zip $JDKPARENTDIR/j2sdk1.4.2${JDKSUFFIX}/j2sdk-1_4_2-doc.zip
cd $JDKPARENTDIR/j2sdk1.4.2${JDKSUFFIX}
sudo unzip j2sdk-1_4_2-doc.zip

find $JDKPARENTDIR/j2sdk1.4.2${JDKSUFFIX}/docs/api -name '*.html' -print | sudo xargs jdk-add-munged-anchor-names
jdk-index-to-alist > ~/emacs/jdk-index.el

