	perl -MCPAN -e shell
	o conf prerequisites_policy ask
	install Net::DNS
	install Time::HiRes
	install Mail::SpamAssassin
	install Mail::Audit
	quit

      spamassassin -t < sample-nonspam.txt > nonspam.out
      spamassassin -t < sample-spam.txt > spam.out

[The files are:
  http://us.spamassassin.org/dist/sample-nonspam.txt
  http://us.spamassassin.org/dist/sample-spam.txt
]

mkdir .spamassassin

----------------

wget http://us.spamassassin.org/dist/spamd/README.spamd
wget http://us.spamassassin.org/dist/spamd/redhat-rc-script.sh
chmod +x redhat-rc-script.sh
sudo mv redhat-rc-script.sh /etc/rc.d/init.d/spamassassin
sudo /etc/rc.d/init.d/spamassassin start
# I'm not sure whether I need to do something special to make sure
