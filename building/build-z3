# Ubuntu:
sudo apt -yqq install z3

# Otherwise:
cd ~/bin/install
wget https://github.com/Z3Prover/z3/releases/download/z3-4.13.0/z3-4.13.0-arm64-glibc-2.35.zip
unzip z3-4.13.0-arm64-glibc-2.35.zip
rm -f z3
ln -s z3-4.13.0-arm64-glibc-2.35 z3

